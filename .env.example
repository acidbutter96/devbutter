# Example environment variables for DevButter
# Copy this file to `.env` and fill the values for local development.

# MongoDB connection string used by the app and the IMAP check endpoint
MONGODB_URI=mongodb://localhost:27017/devbutter

# IMAP settings for inbound email checking (Hostinger example)
IMAP_HOST=imap.hostinger.com
IMAP_PORT=993
IMAP_USER=you@example.com
IMAP_PASS=your_imap_password_here
MAILBOX=INBOX

# Optional shared secret to protect the /api/imap-check endpoint
# If set, the caller must include header `x-imap-secret: <IMAP_CHECK_SECRET>`
IMAP_CHECK_SECRET=replace_with_a_strong_secret

# Vercel Cron secret: Vercel will include this in the Authorization header as
# "Bearer <CRON_SECRET>" for cron invocations. Set this in Vercel Project Settings.
CRON_SECRET=replace_with_a_strong_secret_for_vercel_cron

# Optional: poll interval for local worker (ms). Not used by serverless endpoint.
POLL_INTERVAL_MS=60000

NODE_ENV=development
# Example environment variables for local development
# Copy to `.env.local` and fill the real secrets. Do NOT commit real credentials.

# MongoDB connection string (required)
# Use the connection string provided by your MongoDB provider (Atlas or self-hosted).
MONGODB_URI="mongodb+srv://<username>:<password>@cluster0.mongodb.net/?retryWrites=true&w=majority"

# Optional: database name (default: devbutter)
MONGODB_DB="devbutter"

# Optional: mail settings (used if you implement sending emails after saving)
# Example for SMTP (Nodemailer / Mailpit)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="user@example.com"
SMTP_PASS="your-email-password"
SMTP_FROM="DevButter <oi@devbutter.com>"

# Credentials used for admin dashboard Basic Auth
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="super-secret-password"

# If you need any public runtime variables for the frontend, prefix with NEXT_PUBLIC_
# Example: NEXT_PUBLIC_SITE_NAME="DevButter"

JWT_SECRET=secret_key_for_jwt_signing

# Base URL of the running Next app (used to build links in emails)
# For local development you can set this to http://localhost:3000, for production to your domain.
NEXT_APP_URL=https://devbutter.tech

# Hostinger IMAP example
IMAP_HOST=imap.hostinger.com
IMAP_PORT=993
IMAP_USER=you@example.com
IMAP_PASS=CHANGEME_IMAP_PASSWORD
MAILBOX=INBOX

# Protect the serverless IMAP check endpoint. Set a strong secret in production.
IMAP_CHECK_SECRET=

# Vercel Cron secret (if using Vercel Cron): Vercel will send this as
# Authorization: Bearer <CRON_SECRET>
CRON_SECRET=local-cron-secret

# Optional polling for local worker (ms). Serverless endpoint ignores this.
POLL_INTERVAL_MS=6000